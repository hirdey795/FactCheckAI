{
    "manifest_version": 3,
    "name": "YouTube Fact Checker",
    "version": "1.0",
    "description": "Automatically fact-check YouTube videos using Hugging Face",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "http://localhost:5000/"
    ]
  }
  