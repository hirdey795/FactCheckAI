{
  "manifest_version": 3,
  "name": "FactAi",
  "version": "1.0",
  "description": "Fact-check articles and videos",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "reFacts.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "main.js",
        "reFacts.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}